@model HelpDesk.Models.EMPLOYEE

@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <title>Login</title>

    <!--Bootsrap 4 CDN-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <!--Fontawesome CDN-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

    <!--Custom styles-->
    <!-- <link rel="stylesheet" type="text/css" href="Login.css"> -->
    <link href="~/Content/bootstrap/Login.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">
                    <div style="padding-bottom: 30px; color: #c9c7c7">
                        <center><h1>IT <span style="color: #456">HelpDesk</span> System</h1></center>
                    </div>
                    <h3>Administrator Sign In</h3>
                    <!-- <div class="d-flex justify-content-end social_icon">
                        <span><i class="fab fa-facebook-square"></i></span>
                        <span><i class="fab fa-google-plus-square"></i></span>
                        <span><i class="fab fa-twitter-square"></i></span>
                    </div> -->
                </div>
                <div class="card-body">
@using (Html.BeginForm("Login", "Login", FormMethod.Post)){
    @*@Html.AntiForgeryToken()
    @Html.ValidationSummary(true)*@
                    <form>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            @Html.TextBoxFor(a => a.USER_ID, new { @class = "form-control", @placeholder = "Username", @required = true })
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                        @Html.PasswordFor(a => a.USER_PASSWORD, new { @class = "form-control", @placeholder = "Password", @required = true })
                        </div>
                        <div class="form-group">
                            <button class="btn float-right login_btn">Login</button>
                        </div>
                        <div class ="form-group">
                            <label class="label label-danger" style="color:red;">@ViewBag.ErrorMessage</label>
                        </div>
                    </form>
}
                </div>
                <!-- <div class="card-footer">
                    <div class="d-flex justify-content-center links">
                        Don't have an account?<a href="#">Sign Up</a>
                    </div>
                    <div class="d-flex justify-content-center">
                        <a href="#">Forgot your password?</a>
                    </div>
                </div> -->
            </div>
        </div>
    </div>
</body>
</html>


